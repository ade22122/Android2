<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Граница -->
    <stroke
        android:width="2dp"
        android:color="#FF0000" />

    <!-- Заливка фона -->
    <solid android:color="#FFFFFF" />

    <!-- Скругленные углы -->
    <corners android:radius="8dp" />

    <!-- Внутренние отступы -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>